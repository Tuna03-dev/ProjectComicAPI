    author = comic.Author,
    createdAt = comic.CreatedAt?.ToString("yyyy-MM-ddTHH:mm:ss"),
    latestChapter = comic.Chapters?
        .Where(ch => ch.IsPublished && ch.PublishedDate.HasValue && ch.PublishedDate.Value <= currentDate)
        .OrderByDescending(ch => ch.PublishedDate)
        .FirstOrDefault() != null
