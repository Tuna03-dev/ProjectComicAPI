<!-- Truyền danh sách truyện sang JavaScript -->
<script>
    var comics = @Html.Raw(Json.Serialize(comicsListForJs));
    var currentDate = new Date();

    // Lọc các comic có latestChapter.publishedDate <= ngày hiện tại
    comics = comics.filter(comic => 
        comic.latestChapter != null && 
        new Date(comic.latestChapter.publishedDate) <= currentDate
    );
    
    var pageSize = 5; // Số truyện trên mỗi trang
    var currentPage = 1; // Trang hiện tại
    var totalPages = Math.ceil(comics.length / pageSize); // Tổng số trang

    function renderPage() {
        var comicList = document.getElementById("comic-list");
        comicList.innerHTML = ""; // Xóa dữ liệu cũ

        var start = (currentPage - 1) * pageSize;
        var end = start + pageSize;
        var pageComics = comics.slice(start, end); // Lấy truyện của trang hiện tại

        pageComics.forEach(comic => {
            var tr = document.createElement("tr");
            tr.innerHTML = `
                <td class="thumb">
                    <a href="/Comic/Detail/${comic.id}" title="${comic.title}">
                        <img src="${comic.coverImage}" alt="${comic.title}" width="75" height="106">
                    </a>
                </td>
                <td class="title">
                    <a href="/Comic/Detail/${comic.id}" title="${comic.title}">${comic.title}</a>
                </td>
                <td class="release has-thumb free-chap">
                    <a href="/ReadChapter/Index/${comic.latestChapter.id}" 
                        title="${comic.latestChapter.chapterTitle || "Chapter " + comic.latestChapter.chapterNumber}">
                        ${comic.latestChapter.chapterTitle || "Chapter " + comic.latestChapter.chapterNumber}
                    </a>
                </td>
                <td class="author">
                    <a href="#">${comic.author}</a>
                </td>
                <td class="time">
                    <span class="post-on font-meta">${comic.latestChapter && comic.latestChapter.publishedDate ? new Date(comic.latestChapter.publishedDate).toLocaleDateString('vi-VN', { day: 'numeric', month: 'long', year: 'numeric' }) : "N/A"}</span>
                    <span style="font-weight: 900;"> • </span>
                </td>
            `;
            comicList.appendChild(tr);
        });

        renderPagination();
    }

    function renderPagination() {
        var paginationNumbers = document.getElementById("pagination-numbers");
        paginationNumbers.innerHTML = ""; // Xóa số trang cũ

        var startPage = Math.max(1, currentPage - 2); // Hiển thị 2 trang trước
        var endPage = Math.min(totalPages, currentPage + 2); // Hiển thị 2 trang sau

        for (var i = startPage; i <= endPage; i++) {
            var pageButton = document.createElement("button");
            pageButton.innerText = i;
            pageButton.style.margin = "0 10px";
            pageButton.style.color = "black";
            pageButton.className = "btn btn-sm " + (i === currentPage ? "btn-primary" : "btn-light");
            pageButton.addEventListener("click", function () {
                currentPage = parseInt(this.innerText);
                renderPage();
            });
            paginationNumbers.appendChild(pageButton);
        }

        // Ẩn / Hiện nút "Trang trước" và "Trang sau"
        document.getElementById("prev-page").style.display = (currentPage > 1) ? "inline-block" : "none";
        document.getElementById("next-page").style.display = (currentPage < totalPages) ? "inline-block" : "none";
    }

    document.getElementById("prev-page").addEventListener("click", function () {
        if (currentPage > 1) {
            currentPage--;
            renderPage();
        }
    });

    document.getElementById("next-page").addEventListener("click", function () {
        if (currentPage < totalPages) {
            currentPage++;
            renderPage();
        }
    });

    renderPage(); // Gọi lần đầu để hiển thị dữ liệu
</script>


