@model List<DotNetTruyen.Models.Comic>
<style>
    .paging-navigation {
    margin: 20px 0;
}

.nav-links {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.prev-page, .next-page {
    min-width: 120px;
}

.page-info {
    font-size: 16px;
    color: #666;
}

.btn.btn-outline-secondary {
    padding: 8px 15px;
    border-radius: 4px;
    transition: all 0.3s ease;
}

.btn.btn-outline-secondary:hover:not(.disabled) {
    background-color: #e91e63;
    border-color: #e91e63;
    color: #fff;
}

.btn.btn-outline-secondary.disabled {
    opacity: 0.65;
    cursor: not-allowed;
}

.icon {
    font-size: 14px;
    vertical-align: middle;
}
</style>
<body class="page-template-default page page-id-7 logged-in wp-embed-responsive header-style-1 sticky-enabled sticky-style-1 text-ui-light minimal-reading-layout">
    <div class="wrap">
        <div class="body-wrap">
            <partial name="_HeaderPartial"/>
            <div class="site-content">
                <div class="c-page-content">
                    <div class="content-area">
                        <div class="container">
                            <div class="row">
                                <div class="main-col col-md-12 sidebar-hidden">
                                    <div class="main-col-inner">
                                        <div class="search-wrap">
                                            <h3 class="h4">
                                                <i class="icon ion-ios-star"></i> @ViewBag.TotalComics truyện bạn đang theo dõi
                                            </h3>
                                            <div class="comic-list-container">
    <div class="search-lists">
        @if (Model.Any())
        {
            @foreach (var comic in Model)
            {
                <div class="manga__item">
                    <div class="manga__thumb">
                        <div class="manga__thumb_item">
                            <a href="/Comic/Detail/@comic.Id">
                                <img width="110" height="150" src="@comic.CoverImage" class="attachment-manga-thumb-1 size-manga-thumb-1 wp-post-image" alt="@comic.Title">
                            </a>
                        </div>
                    </div>
                    <div class="manga__content">
                        <div class="manga__content_item">
                            <div class="post-title font-title">
                                <h2>
                                    <a href="@Url.Action("Index","Detail", new { id = comic.Id })">@comic.Title</a>
                                </h2>
                                <div class="manga-excerpt">
                                    <p>@comic.Description</p>
                                </div>
                                <div class="manga-info">
                                    <span class="total">@comic.View View</span>
                                </div>
                                <span class="manga-genres">
                                    <h4>Tác Giả: @comic.Author</h4>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Bạn chưa theo dõi truyện nào.</p>
        }
    </div>
</div>

<!-- Pagination luôn ở dưới -->
@if (Model.Any())
{
    <nav class="navigation paging-navigation">
        <div class="col-12 col-md-12">
            <h4 class="screen-reader-text">Posts navigation</h4>
            <div class="nav-links" style="display: flex; justify-content: space-between; align-items: center; margin-top: 20px;">
                @if (ViewBag.CurrentPage > 1)
                {
                    <div class="prev-page">
                        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" class="btn btn-outline-secondary">
                            <span class=" ion ion-md-arrow-round-back"></span> Trước
                        </a>
                    </div>
                }
                else
                {
                    <div class="prev-page">
                        <span class="btn btn-outline-secondary disabled">
                            <span class="icon ion-md-arrow-back"></span> Trước
                        </span>
                    </div>
                }
                
                <span class="page-info">
                    Trang @ViewBag.CurrentPage trên @ViewBag.TotalPages
                </span>

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <div class="next-page">
                        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })" class="btn btn-outline-secondary">
                            Sau <span class="icon ion-md-arrow-forward"></span>
                        </a>
                    </div>
                }
                else
                {
                    <div class="next-page">
                        <span class="btn btn-outline-secondary disabled">
                            Sau <span class=" ion ion-md-arrow-round-forward"></span>
                        </span>
                    </div>
                }
            </div>
        </div>
    </nav>
}

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>